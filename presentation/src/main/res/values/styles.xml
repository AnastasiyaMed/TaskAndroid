<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

    </style>

    <!-- Pink application theme. -->
    <style name="PinkTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorAccent</item>
        <item name="colorPrimaryDark">@color/colorAccent</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="LoginButton">
        <item name="android:textColor">@android:color/holo_green_dark</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:layout_marginEnd">@dimen/classwork2_start_end_padding</item>
        <item name="android:layout_marginStart">@dimen/classwork2_start_end_padding</item>
    </style>

</resources>